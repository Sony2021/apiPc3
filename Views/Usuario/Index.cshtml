@model List<apiPc3.Integration.dto.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<div class="container my-5">
    <h2 class="mb-4 text-center">@ViewData["Title"]</h2>

    <div class="text-end mb-3">
        <a href="@Url.Action("Create", "Usuario")" class="btn btn-primary">Crear usuario</a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>imagen</th>
                <th>Perfil</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Email</td>
                        <td>@user.Nombre</td>
                        <td>@user.Apellido</td>
                        <td><img src="@user.Avatar" alt="Avatar" class="img-fluid rounded-circle" style="width:50px;height:50px;" /></td>
                        <td><a href="@Url.Action("Perfil", new { Id = user.Id })" class="btn btn-outline-secondary btn-sm">Ir a Perfil</a></td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">No users found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

