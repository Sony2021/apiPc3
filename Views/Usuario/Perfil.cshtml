@model apiPc3.Integration.dto.Usuario

@{
    ViewData["Title"] = "Perfil de Usuario";
}

<div class="container my-5">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-body">
                    <h2 class="card-title">@Model.Nombre @Model.Apellido</h2>
                    <h5 class="card-subtitle mb-2 text-muted">ID: @Model.Id</h5>

                    <div class="row">
                        <div class="col-md-4">
                            <img src="@Model.Avatar" alt="Avatar" class="img-fluid rounded-circle" style="width:100px;height:100px;" />
                        </div>
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-4">Email:</dt>
                                <dd class="col-sm-8">@Model.Email</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <a href="@Url.Action("Index", "Usuario")" class="btn btn-secondary">Volver a la lista de usuarios</a>
</div>

